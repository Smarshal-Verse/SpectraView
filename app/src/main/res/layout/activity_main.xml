<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:src="@drawable/main"
        android:scaleType="centerCrop"
        android:layout_height="0dp"/>


    <TextView
        android:layout_marginTop="10dp"
        android:background="@drawable/dw_button_white"
        android:id="@+id/txtPickGallery"
        android:text="@string/main_button_gallery"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/txtTakePhoto"
        android:background="@drawable/dw_button_green"
        android:text="@string/main_button_photo"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</LinearLayout>